{{#if servant}}
  Make sure to fill in all fields, even if you aren't changing them!
  <form class='update-servant' class='border'>
    <fieldset class='update-form'>
      <div class='col-2'>Name: <input type='text' name='servant[name]' placeholder='{{servant.name}}'></div>
      <div class='col-2'>Class: <input type='text' name='servant[sclass]' placeholder='{{servant.sclass}}'></div>
      <div class='col-2'>Rarity: <input type='text' name='servant[rarity]' placeholder='{{servant.rarity}}'></div>
      <div class='col-2'>Level: <input type='text' name='servant[level]' placeholder='{{servant.level}}'></div>
      <div class='col-2'>Attack: <input type='text' name='servant[atk]' placeholder='{{servant.atk}}'></div>
      <div class='col-2'>Health: <input type='text' name='servant[hp]' placeholder='{{servant.hp}}'></div>
      <div class='col-2'><input type='submit' value='Update Servant'></div>
    </fieldset>
  </form>
  <form class="show-servant-button btn" data-id="{{servant.id}}">
    <fieldset>
      <input type='submit' value='Go Back'>
    </fieldset>
  </form>
{{/if}}
